<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BottomNavigationAppbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- bottom의 txt size 변경위한 것 -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">

        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/line_color</item>
    </style>

    <style name="my_posting_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textColor">@color/line_color</item>
    </style>

    <style name="popularPost">
        <item name="android:background">@drawable/round_border_plus</item>
        <item name="android:backgroundTint">@color/line_color</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
    </style>

    <style name="popularTextType1">
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/community_1_color</item>
        <item name="android:background">@drawable/round_border_plus</item>
        <item name="android:padding">@dimen/margin_5</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:text">공구해요</item>
    </style>
    <style name="popularTextType2">
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/community_2_color</item>
        <item name="android:background">@drawable/round_border_plus</item>
        <item name="android:padding">@dimen/margin_5</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:text">프리토크</item>
    </style>

    <style name="text_style_for_add">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="add_menu_style">
        <item name="android:layout_width">@dimen/top_len_100</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/community__my_color</item>
        <item name="android:gravity">center</item>
    </style>

</resources>