<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_5"
    android:orientation="vertical"
    android:gravity="center"
    android:backgroundTint="@color/line_color"
    android:layout_width="@dimen/top_len_80"
    android:layout_height="@dimen/top_len_100">

    <ImageView
        android:id="@+id/mp_box_image"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/circle"
        android:src="@drawable/ic_baseline_person_outline_24"
        android:layout_width="@dimen/item_size_50"
        android:layout_height="@dimen/item_size_50"/>
    <TextView

        android:id="@+id/mp_box_username"
        app:layout_constraintTop_toBottomOf="@id/ru_box_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        tools:text="위글러"
        android:textSize="@dimen/text_size_15"
        android:layout_width="@dimen/top_len_80"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>


</LinearLayout>