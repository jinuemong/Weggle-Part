<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:hint="  검색"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:paddingStart="@dimen/margin_10"
        android:backgroundTint="@color/line_color_light"
        android:background="@drawable/round_border"
        android:layout_margin="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_size_50"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/follow_user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_10"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:context=".MyAccount.AboutRelation.FollowListFragment"
        tools:listitem="@layout/item_follow_user_data" />
</LinearLayout>
