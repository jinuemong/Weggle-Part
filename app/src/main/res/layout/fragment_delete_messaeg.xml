<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Weggler.Unit.DeleteMessageFragment">

    <LinearLayout
        android:layout_width="@dimen/top_len_300"
        android:orientation="vertical"
        android:layout_height="@dimen/top_len_230"
        android:background="@drawable/round_border">
        <ImageView
            android:id="@+id/close_button"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_gravity="end"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_width="@dimen/text_size_25"
            android:layout_height="@dimen/text_size_25" />
        <TextView
            android:gravity="center"
            android:textSize="@dimen/text_size_25"
            android:text="회원탈퇴"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/community__my_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:textSize="@dimen/text_size_17"
            android:text="@string/quot_quot"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/del_user_type"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:textColorHint="@color/line_color_dark"
            android:hint="회원탈퇴"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="@dimen/top_len_200"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="@dimen/margin_5"
            android:id="@+id/commit_button"
            android:padding="@dimen/margin_10"
            android:text="탈퇴하기"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="@color/line_color"
            android:layout_width="@dimen/top_len_260"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>