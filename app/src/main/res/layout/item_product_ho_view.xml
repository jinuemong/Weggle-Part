<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_buy_product"
    android:layout_width="@dimen/top_len_350"
    android:layout_height="wrap_content"
    android:background="@drawable/round_border"
    android:orientation="horizontal"
    android:padding="@dimen/margin_10">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/top_len_70"
        android:layout_height="@dimen/top_len_70"
        android:src="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/text_size_12"
            tools:text="company" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_2"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            tools:text="product name" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sale_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_5"
                android:textColor="@color/community__my_color"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold"
                tools:text="100%" />

            <TextView
                android:id="@+id/sale_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15"
                tools:text="99,999ì›" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
