<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_5"
    android:background="@drawable/round_border_plus"
    android:backgroundTint="@color/line_color"
    android:layout_width="@dimen/top_len_140"
    android:layout_height="@dimen/top_len_180">
    <ImageView
        android:layout_margin="@dimen/margin_5"
        android:layout_width="@dimen/item_size_20"
        android:layout_height="@dimen/item_size_20"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/ru_box_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/circle"
        android:src="@drawable/ic_baseline_person_outline_24"
        android:layout_width="@dimen/top_len_70"
        android:layout_height="@dimen/top_len_70"/>
    <TextView
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ru_box_username"
        app:layout_constraintTop_toBottomOf="@id/ru_box_image"
        app:layout_constraintBottom_toTopOf="@+id/ur_box_hash_tag"
        android:gravity="center"
        tools:text="위글러"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_17"
        android:layout_width="@dimen/top_len_120"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>
    <TextView

        tools:text="#위글 #위글러 #패션"
        app:layout_constraintTop_toBottomOf="@id/ru_box_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ur_box_hash_tag"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="@dimen/top_len_120"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/follow_button"
        android:text="팔로우"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_10"
        app:layout_constraintTop_toBottomOf="@id/ur_box_hash_tag"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/round_border_plus"
        android:backgroundTint="@color/community__my_color"
        android:layout_width="@dimen/top_len_100"
        android:layout_height="@dimen/item_size_30"/>
</androidx.constraintlayout.widget.ConstraintLayout>