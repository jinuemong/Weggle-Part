<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".MyAccount.AboutRelation.FollowDataFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_size_40"
        android:layout_margin="@dimen/margin_10">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="@dimen/item_size_30"
            android:layout_height="@dimen/item_size_30"
            android:layout_marginStart="@dimen/margin_5"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_size_60"
        app:tabIndicatorColor="@color/black"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/line_color"
        app:tabTextAppearance="@style/tab_text">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로워" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로잉" />
    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <EditText
        android:hint="  검색"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:paddingStart="@dimen/margin_10"
        android:backgroundTint="@color/line_color_light"
        android:background="@drawable/round_border"
        android:layout_margin="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_size_50"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="@dimen/margin_10"
        android:id="@+id/follow_user_list"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_follow_user_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>