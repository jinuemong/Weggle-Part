<?xml version="1.0" encoding="utf-8"?>
<!--피드 게시물 item -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/margin_10"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_len_70">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:background="@drawable/circle"
            android:src="@drawable/ic_baseline_person_outline_24"
            android:layout_width="@dimen/item_size_50"
            android:layout_height="@dimen/item_size_50"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="@dimen/top_len_230"
            android:layout_height="match_parent">
            <TextView
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/user_name"
                android:layout_marginStart="@dimen/margin_10"
                android:textStyle="bold"
                android:text="username"
                android:textSize="@dimen/text_size_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/create_time"
                android:layout_marginStart="@dimen/margin_10"
                tools:text="x년 전 "
                android:textSize="@dimen/text_size_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/white"
            android:padding="@dimen/margin_5"
            android:backgroundTint="@color/my_selected_text"
            android:background="@drawable/round_border_plus"
            android:layout_marginEnd="@dimen/margin_5"
            android:text="    팔로우    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="@dimen/text_size_10"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_width="@dimen/item_size_25"
            android:layout_height="@dimen/item_size_25"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/video_container"
        android:padding="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_len_400">
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/play_button"
            android:src="@drawable/baseline_play_arrow_24"
            android:backgroundTint="@color/line_color_light"
            android:background="@drawable/circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/item_size_50"
            android:layout_height="@dimen/item_size_50"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/like_image"
            android:layout_width="@dimen/item_size_25"
            android:layout_height="@dimen/item_size_25"
            android:src="@drawable/ic_baseline_favorite_24" />
        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/like_num"
            android:gravity="center"
            tools:text="9999"

            android:layout_width="@dimen/item_size_50"
            android:layout_height="@dimen/item_size_20"/>
        <ImageView
            android:id="@+id/comment_image"
            android:layout_marginStart="@dimen/margin_5"
            android:src="@drawable/ic_iconmonstr_speech_bubble_3"
            android:layout_width="@dimen/item_size_25"
            android:layout_height="@dimen/item_size_25"/>
        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/comment_num"
            android:gravity="center"
            tools:text="9999"
            android:layout_width="@dimen/item_size_50"
            android:layout_height="@dimen/item_size_20"/>
    </LinearLayout>
    <TextView
        android:maxLines="4"
        android:id="@+id/body_text"
        android:layout_marginTop="@dimen/margin_10"
        tools:text="게시물 테스트 텍스트"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_list_view"
        android:layout_marginTop="@dimen/margin_20"
        tools:listitem="@layout/item_product_ho_view"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>