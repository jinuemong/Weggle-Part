<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/my_account_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_baseline_person_outline_24"
        app:civ_circle_background_color="@color/line_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/my_account_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nickname"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/my_account_image"
        app:layout_constraintTop_toTopOf="@id/my_account_image"/>
    <TextView
        android:id="@+id/my_account_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shap"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/theme_pink"
        android:background="@drawable/round"
        app:layout_constraintStart_toStartOf="@id/my_account_nickname"
        app:layout_constraintTop_toBottomOf="@id/my_account_nickname"/>
    <TextView
        android:id="@+id/my_account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_info"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/my_account_nickname"
        app:layout_constraintTop_toBottomOf="@id/my_account_tag"/>

    <TextView
        android:id="@+id/my_account_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_context"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/my_account_info"
        app:layout_constraintStart_toEndOf="@id/my_account_image"/>

    <TextView
        android:id="@+id/my_account_post_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/my_account_post"
        app:layout_constraintEnd_toEndOf="@id/my_account_post"
        app:layout_constraintTop_toBottomOf="@id/my_account_post"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seperate_line"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toEndOf="@id/my_account_post_number"
        app:layout_constraintTop_toBottomOf="@id/my_account_post"/>

    <TextView
        android:id="@+id/my_account_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/follower"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/my_account_info"
        app:layout_constraintStart_toEndOf="@id/my_account_post"/>

    <TextView
        android:id="@+id/my_account_follower_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/my_account_follower"
        app:layout_constraintEnd_toEndOf="@id/my_account_follower"
        app:layout_constraintTop_toBottomOf="@id/my_account_follower"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seperate_line"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toEndOf="@id/my_account_follower_number"
        app:layout_constraintTop_toBottomOf="@id/my_account_follower"/>
    <TextView
        android:id="@+id/my_account_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/following"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/my_account_info"
        app:layout_constraintStart_toEndOf="@id/my_account_follower"/>

    <TextView
        android:id="@+id/my_account_following_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/my_account_following"
        app:layout_constraintEnd_toEndOf="@id/my_account_following"
        app:layout_constraintTop_toBottomOf="@id/my_account_follower"/>
    <LinearLayout
        android:id="@+id/my_account_button_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_account_following_number">
        <ImageButton
            android:id="@+id/my_account_review_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_splitscreen_24"
            android:layout_weight="1"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/my_account_challenge_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_favorite_border_black"
            android:layout_weight="1"
            android:background="@color/white"/>
    </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_account_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_account_button_linear"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/my_account_write_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pencil"
        android:backgroundTint="@color/black"
        app:tint="@null"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>