<?xml version="1.0" encoding="utf-8"?>

<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/slide_frame_in_shell"
    android:clickable="true"
    android:focusable="true"
    android:gravity="bottom"
    app:umanoDragView="@id/slide_layout_in_shell"
    app:umanoOverlay="true"
    app:umanoPanelHeight="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weggler.SideFragment.CommunityFragment.ShellFragment">

    <LinearLayout
        android:id="@+id/main_layout_in_shell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_size_50"
            android:layout_margin="@dimen/margin_20">

            <TextView
                android:id="@+id/top_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_25"
                android:textStyle="bold"
                tools:text="상단 텍스트 입니다 " />

            <ImageView
                android:id="@+id/back_button_rwf"
                android:layout_width="@dimen/item_size_30"
                android:layout_height="@dimen/item_size_30"
                android:layout_marginStart="@dimen/margin_5"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/shell_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_10" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/slide_layout_in_shell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
