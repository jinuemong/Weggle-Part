<?xml version="1.0" encoding="UTF-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--back -->
            <stroke android:width="3dp" android:color="@color/my_selected_text" />
            <corners android:radius="240dip"/>
        </shape>
    </item>

    <!-- margin item to item-->
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape >
            <!--innner -->
            <solid android:color="#EFEFEF"/>
            <stroke android:width="2dp" android:color="@color/my_selected_text" />
            <corners android:radius="240dip"/>

        </shape>
    </item>
</layer-list>

